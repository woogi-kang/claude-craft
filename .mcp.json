{
  "mcpServers": {
    "context7": {
      "$comment": "Using shell wrapper to load PATH (fixes npx bash function issue). Use .mcp.windows.json for Windows.",
      "command": "${SHELL:-/bin/bash}",
      "args": [
        "-l",
        "-c",
        "exec npx -y @upstash/context7-mcp@latest"
      ]
    },
    "mermaid": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.mermaidchart.com/mcp"
      ]
    },
    "sequential-thinking": {
      "command": "${SHELL:-/bin/bash}",
      "args": [
        "-l",
        "-c",
        "exec npx -y @modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  },
  "staggeredStartup": {
    "enabled": true,
    "delayMs": 500,
    "connectionTimeout": 15000
  }
}